    </changeSet>

    <!-- Add credit_type -->
    <changeSet author="fineract" id="2">
        <addColumn tableName="e_investment_project">
            <column name="credit_type_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Foreign key to m_code_value -->
    <changeSet author="fineract" id="3">
        <addForeignKeyConstraint
                baseTableName="e_investment_project"
                baseColumnNames="credit_type_id"
                constraintName="FK_ip_credit_type_id"
                referencedTableName="m_code_value"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- Index for credit_type_id -->
    <changeSet author="fineract" id="4">
        <createIndex indexName="IDX_ip_credit_type_id"
                     tableName="e_investment_project">
            <column name="credit_type_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
