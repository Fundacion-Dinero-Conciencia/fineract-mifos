<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- Rename name to description -->
    <changeSet author="fineract" id="1">
        <renameColumn
                tableName="e_additional_expenses"
                oldColumnName="name"
                newColumnName="description"
                columnDataType="VARCHAR(255)" />
    </changeSet>

    <!-- Add commission_type_id -->
    <changeSet author="fineract" id="2">
        <addColumn tableName="e_additional_expenses">
            <column name="commission_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Foreign key to m_code_value -->
    <changeSet author="fineract" id="3">
        <addForeignKeyConstraint
                baseTableName="e_additional_expenses"
                baseColumnNames="commission_type_id"
                constraintName="FK_ae_commission_type_id"
                referencedTableName="m_code_value"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- Index for commission_type_id -->
    <changeSet author="fineract" id="4">
        <createIndex indexName="IDX_ae_commission_type_id"
                     tableName="e_additional_expenses">
            <column name="commission_type_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
