<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="fineract">
        <!-- Renombrar valores existentes para evitar daño de la data
             Se dejan predefinidos por el sistema para evitar su edición desde Mifos-->
        <update tableName="m_payment_type">
            <column name="value" value="Transferencia Interna"/>
            <column name="code_name" value="INTERNAL_TRANSFER"/>
            <column name="is_system_defined" valueBoolean="true"/>
            <where>value = 'Repayment Adjustment Chargeback'</where>
        </update>

        <update tableName="m_payment_type">
            <column name="value" value="Transferencia Bancaria"/>
            <column name="code_name" value="BANK_TRANSFER"/>
            <column name="is_system_defined" valueBoolean="true"/>
            <where>value = 'Repayment Adjustment Refund'</where>
        </update>

        <update tableName="m_payment_type">
            <column name="value" value="Kiphu"/>
            <column name="code_name" value="KIPHU"/>
            <column name="is_system_defined" valueBoolean="true"/>
            <where>value = 'Money Transfer'</where>
        </update>

        <!-- Nuevo no especificado -->
        <insert tableName="m_payment_type">
            <column name="value" value="Otra no especificada"/>
            <column name="description" value="Otro no especificado"/>
            <column name="is_cash_payment" valueBoolean="false"/>
            <column name="order_position" valueNumeric="99"/>
            <column name="code_name" value="OTHER_UNSPECIFIED"/>
            <column name="is_system_defined" valueBoolean="true"/>
        </insert>
    </changeSet>


</databaseChangeLog>
